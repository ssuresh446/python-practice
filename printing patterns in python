#this is done by my own
x=int(input('enter the size of pattern : '))
#print(x)
#y=input('enter the symbol : ')
#print(y)
for i in range(x):
    for j in range(x):
        if i+j>=((x-1)/2) and i+j<=(3*(x-1)/2) and i-j<((x+1)/2) and j-i<((x+1)/2):
            print('$  ',end="")
        else:
            print('   ',end="")

    print()
