x=int(input('enter the size of pattern : '))
for i in range(x):
    for j in range(x):
        if i+j>7 and i>=j : #(3*(x-1)/2) and i-j<((x+1)/2) and i>(x-1)/2:
            print('$  ',end="")
        else:
            print('   ',end="")

    print()
