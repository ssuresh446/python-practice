for i in range(10):
    print(i)
for i in range(45,53):
    print(i)
for i in range(45,53,2):
    print(i)
for i in range(44,20,-2):
    print(i)
print('we can neglect the number which ever we dont want,here am neglecting 5 multiples by using if condition')
for i in range(20,200,4):
    if i%5!=0:
        print(i)

