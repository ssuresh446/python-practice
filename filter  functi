def is_even(n):
    return n%2==0

nums=[1,3,5,7,9,2,4,6,8,0]

evens=list(filter(is_even,nums))
print(evens)

# or
print('here no need to define function seperately')
nums1=[1,3,5,7,12,20,19]

evens=list(filter(lambda k:k%2==0,nums1))
print(evens)

